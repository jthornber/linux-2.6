config DM_PERSISTENT_DATA
       tristate "Persistent data library"
       depends on BLK_DEV_DM
       select LIBCRC32C
       select DM_BUFIO
       ---help---
	 Library providing immutable on-disk data structure support
	 for device-mapper targets such as the thin provisioning and
	 caching targets.

